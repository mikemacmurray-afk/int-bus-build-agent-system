{
  "agent_info": {
    "name": "Content Engine Agent",
    "version": "1.0",
    "pillar": "Distribution",
    "status": "active",
    "description": "Repurpose and generate content across multiple platforms while maintaining brand voice"
  },
  
  "supported_platforms": {
    "x_twitter": {
      "enabled": true,
      "formats": ["thread", "single", "quote"],
      "character_limit": 280,
      "optimal_thread_length": "6-8 tweets",
      "hashtag_limit": 2,
      "engagement_hook": "required"
    },
    "linkedin": {
      "enabled": true,
      "formats": ["long-form", "poll", "carousel"],
      "optimal_length": "1300-2000 characters",
      "line_break_strategy": "short paragraphs",
      "first_line_critical": true,
      "engagement_question": "recommended"
    },
    "instagram": {
      "enabled": true,
      "formats": ["feed-post", "carousel", "reel-script"],
      "caption_length": "150-200 words",
      "carousel_slides": "5-10",
      "hashtag_count": "10-15",
      "hook_placement": "first_line"
    },
    "youtube": {
      "enabled": true,
      "formats": ["short-script", "long-form-outline"],
      "short_duration": "60 seconds max",
      "hook_window": "3 seconds",
      "subtitle_friendly": true
    },
    "email": {
      "enabled": true,
      "formats": ["newsletter", "sequence", "broadcast"],
      "subject_line_length": "6-8 words",
      "preview_text": "required",
      "single_cta": "required",
      "scannable_format": true
    },
    "blog": {
      "enabled": true,
      "formats": ["article", "guide", "case-study"],
      "word_count": "1200-2000",
      "seo_optimized": true,
      "internal_links": "2-3",
      "external_links": "1-2"
    },
    "facebook": {
      "enabled": false,
      "formats": ["post", "story"]
    },
    "tiktok": {
      "enabled": false,
      "formats": ["script"]
    }
  },
  
  "content_types": {
    "educational": {
      "percentage_target": 40,
      "formats": [
        "how-to-guides",
        "frameworks",
        "step-by-step",
        "concept-explanations",
        "tutorials"
      ]
    },
    "proof": {
      "percentage_target": 30,
      "formats": [
        "case-studies",
        "transformations",
        "testimonials",
        "results-metrics",
        "before-after"
      ]
    },
    "engagement": {
      "percentage_target": 20,
      "formats": [
        "questions-polls",
        "controversial-takes",
        "personal-stories",
        "behind-scenes",
        "challenges"
      ]
    },
    "promotional": {
      "percentage_target": 10,
      "formats": [
        "offers",
        "programs",
        "lead-magnets",
        "webinars",
        "sales"
      ]
    }
  },
  
  "quality_standards": {
    "engagement_score": {
      "hook_strength": {
        "weight": 0.25,
        "target": 8
      },
      "value_delivery": {
        "weight": 0.30,
        "target": 8
      },
      "proof_integration": {
        "weight": 0.20,
        "target": 7
      },
      "cta_clarity": {
        "weight": 0.15,
        "target": 8
      },
      "platform_optimization": {
        "weight": 0.10,
        "target": 9
      },
      "minimum_overall": 7.5
    },
    "brand_alignment": {
      "voice_consistency": "required",
      "message_alignment": "required",
      "proof_support": "required",
      "authenticity": "required",
      "platform_fit": "required"
    },
    "effectiveness_rubric": {
      "excellent": {
        "range": [9, 10],
        "criteria": [
          "immediately_engaging_hook",
          "clear_actionable_value",
          "strong_proof_integration",
          "compelling_cta",
          "perfect_platform_fit"
        ]
      },
      "good": {
        "range": [7, 8],
        "criteria": [
          "solid_hook",
          "good_value_delivery",
          "some_proof",
          "clear_cta",
          "platform_appropriate"
        ]
      },
      "needs_work": {
        "range": [5, 6],
        "criteria": [
          "weak_hook",
          "vague_value",
          "missing_proof",
          "unclear_cta",
          "poor_platform_fit"
        ]
      },
      "reject": {
        "range": [1, 4],
        "criteria": [
          "no_hook",
          "no_value",
          "no_proof",
          "no_cta",
          "wrong_format"
        ]
      }
    }
  },
  
  "content_formulas": {
    "hook_formula": {
      "structure": "[Specific Result] + [Unexpected Element] + [Promise]",
      "examples": [
        "I made $50K in 30 days. Here's the counterintuitive strategy I used.",
        "Lost 47 clients in one month. Best thing that ever happened. Here's why."
      ]
    },
    "value_formula": {
      "structure": "[Problem] + [Why It Matters] + [Solution Framework] + [How to Apply]",
      "platform_variations": {
        "x_twitter": "Problem → 3 Insights → Proof → Framework → CTA",
        "linkedin": "Problem → Story → Insight → Proof → Takeaway",
        "instagram": "Hook → Value Points → Example → CTA"
      }
    },
    "proof_formula": {
      "structure": "[Name] was [Struggle] → [Intervention] → [Specific Result] → [Current State]",
      "example": "Sarah was stuck at $3K/month after 2 years. After the Niche Clarity Sprint, she hit $18K in month one. Now she's at $50K/month."
    },
    "cta_formula": {
      "structure": "[Action] + [Value] + [Friction Reducer]",
      "examples": [
        "Comment 'FRAMEWORK' and I'll send you the template (free)",
        "Download the guide here (no email required)"
      ]
    }
  },
  
  "platform_templates": {
    "x_twitter_thread": {
      "structure": [
        "tweet_1_hook",
        "tweet_2_context",
        "tweet_3_5_insights",
        "tweet_6_proof",
        "tweet_7_framework",
        "tweet_8_cta"
      ],
      "formatting": {
        "line_breaks": "required",
        "character_limit": 280,
        "hashtags": "1-2 max"
      }
    },
    "linkedin_post": {
      "structure": [
        "hook_2_lines",
        "story_300_500_words",
        "insight_200_300_words",
        "proof_100_200_words",
        "takeaway_50_100_words",
        "cta"
      ],
      "formatting": {
        "paragraph_length": "2-3 lines",
        "line_breaks": "strategic",
        "emoji_bullets": "optional"
      }
    },
    "instagram_caption": {
      "structure": [
        "hook_first_line",
        "story_value_3_5_paragraphs",
        "proof_example",
        "cta",
        "hashtags_10_15"
      ],
      "carousel_structure": [
        "hook_slide",
        "value_slides_2_4",
        "proof_slide",
        "framework_visual",
        "examples_steps",
        "cta_slide"
      ]
    },
    "email_newsletter": {
      "structure": [
        "subject_line",
        "preview_text",
        "personal_opening",
        "story_hook_3_4_paragraphs",
        "value_teaching",
        "proof_example",
        "primary_cta",
        "secondary_content_optional"
      ],
      "formatting": {
        "paragraph_length": "3-4 lines",
        "subheadings": "for scannability",
        "one_primary_cta": "required"
      }
    },
    "blog_post": {
      "structure": [
        "seo_title_h1",
        "meta_description",
        "introduction_100_150_words",
        "main_sections_h2_300_400_words_each",
        "real_world_example_200_300_words",
        "conclusion_100_150_words"
      ],
      "seo_elements": {
        "internal_links": "2-3",
        "external_links": "1-2",
        "alt_text": "all images",
        "url_structure": "keyword-focused"
      }
    },
    "youtube_short_script": {
      "structure": [
        "0:00-0:03 hook_visual",
        "0:03-0:10 problem_setup",
        "0:10-0:35 value_delivery",
        "0:35-0:45 proof_example",
        "0:45-0:55 solution_cta",
        "0:55-0:60 end_screen"
      ],
      "requirements": {
        "text_overlay": "every frame",
        "subtitles": "required",
        "format": "vertical 9:16",
        "pacing": "quick cuts every 3-5 seconds"
      }
    }
  },
  
