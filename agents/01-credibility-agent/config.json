  "extraction_patterns": {
    "metrics": {
      "percentage": "\\d+%",
      "currency": "\\$\\d+[,\\d]*",
      "time_duration": "\\d+[,\\d]*\\s*(hours?|days?|weeks?|months?)",
      "before_after": "from\\s+(\\$?\\d+[,\\d]*)\\s+to\\s+(\\$?\\d+[,\\d]*)",
      "increase": "increased?\\s+by\\s+(\\d+)%?",
      "growth": "grew\\s+(\\$?\\d+[,\\d]*)",
      "savings": "saved?\\s+(\\d+)"
    },
    "timeline": {
      "in_duration": "in\\s+(\\d+)\\s+(days?|weeks?|months?|years?)",
      "within_duration": "within\\s+(\\d+)\\s+(days?|weeks?|months?)",
      "after_duration": "after\\s+(\\d+)\\s+(days?|weeks?|months?)"
    },
    "emotions": {
      "confidence": ["confident", "finally", "no longer afraid", "feel equipped", "empowered"],
      "relief": ["weight off", "easier", "breathe", "stress-free", "peace of mind"],
      "excitement": ["excited", "thrilled", "amazing", "incredible", "can't believe"],
      "gratitude": ["thank you", "grateful", "appreciate", "changed everything", "life-changing"],
      "transformation": ["transformed", "complete turnaround", "night and day", "totally different"]
    }
  },
  
  "email_integration": {
    "gmail": {
      "enabled": true,
      "scopes": ["https://www.googleapis.com/auth/gmail.readonly"],
      "default_query": "is:unread OR subject:(testimonial OR success OR win OR result)",
      "max_results": 50,
      "date_ranges": {
        "7": "Last 7 days",
        "30": "Last 30 days",
        "90": "Last 90 days",
        "all": "All time"
      }
    },
    "outlook": {
      "enabled": true,
      "scopes": ["Mail.Read"],
      "default_query": "hasAttachments:false AND (subject:testimonial OR subject:success OR subject:win)",
      "max_results": 50,
      "date_ranges": {
        "7": "Last 7 days",
        "30": "Last 30 days",
        "90": "Last 90 days",
        "all": "All time"
      }
    }
  },
  
  "storage": {
    "session_path": "../knowledge-base/sessions/",
    "persistent_path": "../knowledge-base/persistent/proof-library/",
    "format": "markdown",
    "frontmatter_format": "yaml",
    "auto_save": true,
    "auto_save_interval": 60000,
    "backup_enabled": true,
    "backup_frequency": "daily"
  },
  
  "export_formats": {
    "csv": {
      "enabled": true,
      "columns": ["client", "result", "quote", "type", "tags", "created", "verified"]
    },
    "json": {
      "enabled": true,
      "pretty_print": true
    },
    "markdown": {
      "enabled": true,
      "include_frontmatter": true
    }
  },
  
  "notifications": {
    "pattern_detected": {
      "enabled": true,
      "threshold": 5,
      "message_template": "Pattern detected: {count} {type} proofs. Consider creating case study."
    },
    "high_quality_proof": {
      "enabled": true,
      "threshold": 8.5,
      "message_template": "High-quality proof detected! Score: {score}/10. Consider verification."
    },
    "proof_library_milestone": {
      "enabled": true,
      "milestones": [10, 25, 50, 100, 250, 500],
      "message_template": "ðŸŽ‰ Milestone reached: {count} proof assets in library!"
    }
  },
  
  "validation_rules": {
    "required_fields": {
      "manual_entry": ["client", "result", "quote"],
      "email_extraction": ["from", "body", "date"],
      "form_response": ["response_data"]
    },
    "minimum_lengths": {
      "email_body": 50,
      "quote": 20,
      "result": 10,
      "context": 0
    },
    "spam_detection": {
      "enabled": true,
      "keywords": ["click here", "buy now", "limited offer", "act fast", "unsubscribe"]
    }
  },
  
  "feature_flags": {
    "enable_email_scanning": true,
    "enable_manual_entry": true,
    "enable_form_processing": true,
    "enable_file_upload": true,
    "enable_batch_processing": true,
    "enable_pattern_detection": true,
    "enable_case_study_generation": true,
    "enable_auto_classification": true,
    "enable_quality_scoring": true,
    "enable_verification_prompts": true
  },
  
  "ui_settings": {
    "default_tab": "email",
    "items_per_page": 20,
    "show_quality_scores": true,
    "show_timestamps": true,
    "enable_search": true,
    "enable_filters": true,
    "color_code_by_type": true,
    "auto_refresh_interval": 30000
  },
  
  "performance": {
    "batch_size": 10,
    "max_concurrent_processes": 3,
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "cache_ttl_seconds": 300
  }
}
