{
  "agent_info": {
    "name": "Credibility Agent",
    "version": "1.0.0",
    "agent_id": "credibility-001",
    "pillar": "Authority",
    "description": "Extract and organize proof of results from client interactions",
    "status": "active",
    "created": "2025-12-20",
    "last_updated": "2025-12-20"
  },
  
  "capabilities": {
    "input_sources": [
      "gmail",
      "outlook",
      "manual_entry",
      "form_responses",
      "file_upload",
      "csv_import",
      "json_import"
    ],
    "output_formats": [
      "proof_asset",
      "case_study",
      "testimonial_collection",
      "proof_library_export"
    ],
    "processing_modes": [
      "batch",
      "single",
      "realtime"
    ]
  },
  
  "thresholds": {
    "confidence_minimum": 0.3,
    "quality_minimum": 5.0,
    "pattern_detection_count": 5,
    "case_study_minimum_proofs": 5,
    "verification_required_threshold": 8.5,
    "text_minimum_length": 50,
    "quote_minimum_length": 20,
    "quote_maximum_length": 500
  },
  
  "scoring_weights": {
    "specificity": {
      "has_metrics": 4,
      "has_timeline": 2,
      "has_before_after": 2,
      "has_specific_outcome": 2
    },
    "emotional_resonance": {
      "transformation_language": 3,
      "gratitude_excitement": 3,
      "personal_story": 2,
      "vulnerability": 2
    },
    "usability": {
      "required_fields": 3,
      "substantial_quote": 2,
      "has_context": 2,
      "verified": 2,
      "clear_client": 1
    },
    "overall": {
      "specificity_weight": 0.4,
      "emotional_weight": 0.3,
      "usability_weight": 0.3
    }
  },
  
