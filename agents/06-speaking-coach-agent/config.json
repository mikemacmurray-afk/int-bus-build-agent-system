  "presentation_structure": {
    "power_opening": {
      "duration": "3-5 minutes",
      "components": [
        "hook",
        "problem",
        "promise",
        "credibility"
      ],
      "hook_types": [
        "bold_statement",
        "surprising_statistic",
        "personal_story",
        "provocative_question",
        "visual_demonstration"
      ]
    },
    "core_content": {
      "framework": "3_point",
      "point_1": {
        "focus": "foundation",
        "percentage": 30,
        "elements": [
          "core_concept",
          "why_it_matters",
          "common_mistakes",
          "better_approach"
        ]
      },
      "point_2": {
        "focus": "implementation",
        "percentage": 40,
        "elements": [
          "step_by_step_process",
          "real_example",
          "unique_method",
          "practical_application"
        ]
      },
      "point_3": {
        "focus": "acceleration",
        "percentage": 30,
        "elements": [
          "advanced_technique",
          "proof_case_study",
          "whats_possible",
          "next_level_thinking"
        ]
      }
    },
    "powerful_close": {
      "duration": "5-7 minutes",
      "components": [
        "recap",
        "inspiration",
        "call_to_action",
        "memorable_ending"
      ]
    }
  },
  
