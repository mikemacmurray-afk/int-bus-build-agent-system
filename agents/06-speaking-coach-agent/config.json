  "qa_mastery": {
    "structure": {
      "before_qa": "share_3_key_takeaways",
      "during_qa": "answer_questions",
      "after_qa": "powerful_closing_statement",
      "never_end_on_qa": true
    },
    "handling_techniques": {
      "bridge_method": {
        "acknowledge": "Great question about [topic]",
        "bridge": "Let me share what I've seen...",
        "answer": "[Specific answer with example]",
        "confirm": "Does that answer your question?"
      },
      "reframe": {
        "question_type": "comparison_to_competitor",
        "response": "What makes our approach different is..."
      },
      "deflect_politely": {
        "question_type": "very_specific_off_topic",
        "response": "Great question, but specific to your situation. Let's connect after..."
      }
    },
    "difficult_questions": {
      "the_challenge": {
        "format": "I tried this before and it didn't work",
        "response_framework": [
          "acknowledge_experience",
          "explain_difference",
          "provide_proof_example"
        ]
      },
      "the_objection": {
        "format": "This seems too expensive/time-consuming/difficult",
        "response_framework": [
          "acknowledge_concern",
          "reframe_value",
          "proof_of_overcoming"
        ]
      },
      "the_skeptic": {
        "format": "How do I know this actually works?",
        "response_framework": [
          "validate_healthy_skepticism",
          "specific_case_study",
          "social_proof",
          "turn_question_back"
        ]
      }
    }
  },
  
